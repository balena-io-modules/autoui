{
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "es2020",
    "resolveJsonModule": true,
    "target": "es2015",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [
      "es2019",
      "dom"
    ],
  },
  "include": [
    "src",
  ],
  "exclude": [
    ".*spec.tsx?"
  ]
}
